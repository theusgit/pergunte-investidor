<%- include ('partials/header.ejs') %>
<body>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <br>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method = "POST" action="/responder"><br>
        <h3>Responder</h3>
        <textarea required placeholder="Digite sua resposta" class="form-control" name="corpo" ></textarea><br>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        <button type="submit" class = "btn btn-success">Enviar resposta</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => {%>
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo %></p>
            </div>
        </div><br>
    <% }) %>
</div>
</body>
<%- include ('partials/footer.ejs') %>
